@model Auth.Models.LoginViewModel

<!DOCTYPE html>
<html lang="ru">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
	<title>WebApp</title>
	<link rel="stylesheet" href="~/css/StyleSheet.css">
	
</head>
@Html.AntiForgeryToken()
<body style="background-color: white">

	<div class="wrapper">
		@*<form method="post">*@
		<div class="app">
			<div>
				<img src="~/img/Arrow 19.svg" class="absolute__back" style="left: 21px">
				<a class="absolute__back" href="/Home/Auth">
					Назад
				</a>
			</div>
			<div class="app__img__tur" style="width: 100%; text-align: center;">
				<img src="~/img/img2.png" style="width: 100px; ">
			</div>
			<div class="turik" style="font-size: 30px">
				TurTuristam
			</div>

			<a class="in__out__text">Вход</a>
			<form method="post">
				<div style="width: 100%">
					<input type="text" name="nametur" id="nametur" placeholder="Почта" style="padding: 5px 0; width: 100%; height: 40px; border-radius: 5px; border-color: #539AF6; margin-top: 30px; outline: none; padding-left: 10px; font-size: 20px" />
				</div>
				<div style="width: 100%; position: relative">
					<input type="password" name="passwordtur" id="passwordtur" placeholder="Пароль" style="padding: 5px 0; width: 100%; height: 40px; border-radius: 5px; position: relative; border-color: #539AF6; margin-top: 20px; outline: none; padding-left: 10px; font-size: 20px" />
					<img id="glazik__img" src="~/img/Group 75.svg"/>
				</div>
				<div style="width: 100%; font-size: 12px; color: #03178C"><b>*Проверьте почту</b></div>
				<div style="width: 100%; text-align: center;">
					<button id="inbutton" type="submit" class="invalid">ВОЙТИ</button>
				</div >
			</form>
			<div style="width: 100%; text-align: center;">
				<a class="registerbutton" href="/Home/ResetPass/" style="text-decoration: none" >Отправить пароль</a>
			</div>


		</div>
	@*</form>*@
	</div>
<script src="~/js/InButton.js"></script>
<script src="~/js/GetPassword.js"></script>
<script src="~/js/Glazik.js"></script>
</body>
</html>